body
	font-family "Calibri", sans-serif
	font-feature-settings "liga" 0
	background #FFF
	margin 0
	padding 30px
	width 360px
	// width 640px
.btn
	padding 7px 15px
	border none
	border-radius 4px
	color #FFF
	text-transform uppercase
	font-size 13px
	font-weight bold
	outline none
	cursor pointer

symbol, symbol svg
	display initial

textarea
	border none
	transition background 85ms ease-in, border-color 85ms ease-in
	border-radius 4px
	word-wrap break-word
	overflow hidden
	outline none
	resize none
	width 97%
	font-family "Calibri", sans-serif
