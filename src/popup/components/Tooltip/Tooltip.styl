.tooltip
  padding 3px 8px
  position absolute
  border-radius 3px
  border 1px solid lighten(color-4, 50%)
  background #FFF
  box-shadow 1px 1px 1px #5f6c9052
  z-index 10
  opacity 0
  visibility hidden
  transition all .3s
  &:before
    content ""
    width 5px
    height 5px
    background #FFF;
    border-top 1px solid #adb5c9
    border-left 1px solid #adb5c9
    margin-top -7px
    display block
    transform rotate(45deg)
  &-name
    margin 0
    color color-4