.search-icon
  width 30px
  height 30px
  cursor pointer 
  fill color-1

.search-content
  float right
  margin-top -6px
  position relative

.search-input
  display: block;
  height: 20px;
  outline: none;
  position absolute
  right 25px
  top 0
  border none
  width 10px
  opacity 0
  font-size 16px
  visibility hidden
  transform translateX(-30px)
  transition all .2s ease-in
  padding 15px 5px 15px 5px
  border none
  background rgba(0,0,0,0.003)
  box-shadow inset 0 -2px 1px rgba(0,0,0,0.03)
  &:focus
    outline none

.search-active
  .search-input
    transform translateX(0px)
    visibility visible
    opacity 1
    width 100px