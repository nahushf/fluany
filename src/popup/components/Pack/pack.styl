.pack-container
  clear both
  padding-top 10px
.packs-content
  padding 0
  list-style none
  display flex
  flex-flow wrap
  margin-bottom 20px
  margin-top 0
  justify-content space-between
  ::-webkit-input-placeholder
    color #FFF

.pack-item
  width 282px
  padding 20px 14px 14px 10px
  height 100px
  margin-top 15px
  position relative
  display block
  text-decoration none
  border-radius 4px
  transition background .3s ease-in
  cursor pointer
  z-index 1

  &:hover, &:active, &:focus
    .palette-color, .play-content, .play-label, .show-pack
      opacity 1
      visibility visible
    .setting-trash, .exportPack
      opacity .4
  h3
    color #FFF
    font-size 16px
    margin 0
  .show-pack
    color #FFF
    cursor pointer
    border none
    position absolute
    bottom 10px
    font-weight bold
    transition .1s ease-in
    opacity 0
    &:before
      content ""
      width 0
      height 2px
      background-color #FFF
      position absolute
      left 2px
      top 15px
      transition all .3s
    &:hover, &:active, &:focus
      &:before
        width 80%


  &.color-1, &.color-2, &.color-3, &.color-4
    .input-description-package, .input-title-package
      width 95%
      height auto
      padding-top: 5px
      margin-top: 5px
      transition all .3s
      &:focus
        color #FFF
        padding-left 10px
        background rgba(0, 0, 0, .1);
    .input-title-package:focus + .title-edit-icon, .input-description-package:focus + .description-edit-icon
      display none

  &.color-1
    background-color color-1
    .play-content
      background-color lighten(color-1, 7%)
      box-shadow 2px 8px 22px darken(color-1, 20%)

  &.color-2
    background-color color-2
    .play-content
      background-color lighten(color-2, 7%)
      box-shadow 2px 8px 22px darken(color-2,  2%)

  &.color-3
    background-color color-3
    .play-content
      background-color lighten(color-3, 7%)
      box-shadow 2px 8px 22px darken(color-3,  20%)

  &.color-4
    background-color color-4 
    .play-content
      background-color lighten(color-4, 7%)
      box-shadow 2px 8px 22px darken(color-4,  20%)
  .play-content.playing
    background color-2
  .setting-trash
    position absolute
    bottom 9px
    right 16px
    opacity 0
    cursor pointer
    .trash-icon
      width 19px
      height 19px
      fill #FFF
    .tooltip
      margin-top 6px
    &:hover, &:active, &:focus
      opacity 1
      .tooltip
        opacity 1
        visibility visible
  .exportPack
    position absolute
    right 64px
    bottom 0
    opacity 0
    .export-icon
      fill #FFF
      transform scale(.6)
      path
        fill #FFF
    &:hover, &:active, &:focus
      opacity 1

.pack-item--new
  text-align center
  border 2px dotted color-3
  color gray-light
  padding 0px 12px 30px 11px
  .pack-item-content
    cursor pointer

.create-package--icon
  font-size 80px
  margin 45px 0 20px 0
  line-height 10px
  font-weight bold

.create-package--description
  margin 0
  font-size 17px
  font-weight bold

.pack-item--creating
  ::-webkit-input-placeholder
    color gray-silver
  padding 0 10px
  .pack-item--title
    font-size 17px
    text-align left
    margin-bottom 6px
    margin-top 7px
    color color-3
    font-weight bold
  .pack-item--input
    width 95%
    display block
    height 30px
    padding-left 10px
    border-radius 3px
    border 1px solid #ced4d8
    outline none
  .new-pack--buttons
    display flex
    justify-content space-between
    margin-top 10px
    .btn-create
      padding 10px
      font-size 10px
      width 97px
      height 37px
      width 100%
      background color-3
      transition .3s
      &:hover, &:active, &:focus
        background darken(color-3, 15%)

.title-package--container
  margin-top -10px
  position relative
  .input-title-package
    display block
    cursor pointer
    color #FFF
    font-size 20px
    font-weight bold
    background transparent
    &:focus
      color darken(color-1, 10%)
      background #FFF
      cursor auto
  &:hover, &:active, &:focus
    .title-edit-icon
      opacity 1
      visibility visible

.description-package--container
  height 48px
  .input-description-package
    display block
    font-weight 500
    font-size 12px
    color #FFF
    width 98%
    height 100%
    &:focus
      background #FFF
  &:hover, &:active, &:focus
    .description-edit-icon
      opacity 1
      visibility visible

.more-package--content
  position relative
  text-align center
  .more-package--button
    background transparent
    border 2px solid color-4
    color color-4
    transition background .2s
    &:hover, &:active
      background color-4
      color #FFF
  &.more-package--hidden
    display none

//icons
.edit-icon
  width 21px
  height 21px
  fill rgba(255, 255, 255, 0.68)

.title-edit-icon
  position absolute
  right -12px
  top 3px
  cursor pointer
  opacity 0
  visibility hidden

.description-edit-icon
  float right
  margin-top -24px
  margin-right -2px
  opacity 0
  visibility hidden

.pack-container .fish-2
  position fixed
  width 35px
  height 35px
  bottom 10px
  left 145px
  animation 3s 1 fish2
  animation-fill-mode forwards
  &.bro
    left 176px
    width 25px
    height 25px


.progress-panel
  position absolute
  left 0
  top -1px
  width 100%
  height 15px
  svg.rc-progress-line 
    background rgba(103, 103, 103, 0.23)
    height 10px
    width 100%
    border-top-left-radius 4px
    border-top-right-radius 4px
    .rc-progress-line-trail
      display none
  .checkmark-icon
    display none
  &.success
    .checkmark-icon
      position absolute
      width 20px
      height 20px
      z-index 10
      top -4px
      right -9px
      display block
    &:after
      content ""
      position absolute
      right -13px
      width 30px
      height 21px
      background #b2da76
      color #FFF
      box-shadow 0 7pt 18pt 0 rgba(0, 0, 0, 0.3)
      top -10px
      border-radius: 100%
      text-align center
      padding-top 10px


